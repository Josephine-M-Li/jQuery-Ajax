      <script src="Scripts/jquery-3.5.1.min.js"></script>
      <script>
         $.ajax({
         type: 'get',
         url: 'https://ptx.transportdata.tw/MOTC/v2/Tourism/Restaurant?$format=JSON',
         success: function (data) {
         console.log(data);
         var item = "";
         for (var i = 0; i < data.length; i++) {
         item += "<tr>";
         item += "<td>" + data[i].Name +"</td>";
         item += "<td>" + data[i].City + "</td>";
         item += "<td>" + data[i].Address+ "</td>";
         item += "<td>" + data[i].OpenTime + "</td>";
         item += "<td>" + data[i].Phone + "</td>";
         item += "</tr>";
         }
         $('#main').append(item);
         },
         error: function () {
         $('#title').text('本站目前忙碌中請稍後再試!!');
         }
         });
      </script>
